# ZodiaCore Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
# For development: use local MongoDB container
# For production: use MongoDB Atlas connection string
MONGODB_URI=mongodb://mongodb:27017/zodiacore
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/zodiacore?retryWrites=true&w=majority

# MongoDB initialization (for local development)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_here
MONGO_DATABASE=zodiacore

# Database connection settings
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis connection settings
REDIS_CONNECTION_TIMEOUT=5000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Cache settings
CACHE_TTL=3600
CACHE_PREFIX=zodiacore:

# =============================================================================
# SERVICE PORTS AND ENDPOINTS
# =============================================================================

# Core Astrology Services
ZC1_VEDIC_PORT=3006
ZC2_CHINESE_PORT=3007
ZC3_WESTERN_PORT=3008
ZC4_NUMEROLOGY_PORT=3005

# Extended Services
VEDIC_SERVICE_PORT=3001
WESTERN_SERVICE_PORT=3002
CHINESE_SERVICE_PORT=3004
MUNDANE_SERVICE_PORT=3003

# Shared Services
AUTH_SERVICE_PORT=3009
GATEWAY_SERVICE_PORT=3010

# Frontend
FRONTEND_PORT=3000

# Service URLs for inter-service communication
ZC1_VEDIC_URL=http://zc1-vedic:3006
ZC2_CHINESE_URL=http://zc2-chinese:3007
ZC3_WESTERN_URL=http://zc3-western:3008
ZC4_NUMEROLOGY_URL=http://zc4-numerology:3005
VEDIC_SERVICE_URL=http://vedic-service:3001
WESTERN_SERVICE_URL=http://western-service:3002
CHINESE_SERVICE_URL=http://chinese-service:3004
MUNDANE_SERVICE_URL=http://mundane-service:3003
AUTH_SERVICE_URL=http://auth:3009
GATEWAY_SERVICE_URL=http://gateway:3010

# External API URLs (for production)
REACT_APP_API_URL=http://localhost:3010

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration (if applicable)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# API Keys (use secrets manager in production)
OPENAI_API_KEY=your_openai_api_key
ASTROLOGY_API_KEY=your_astrology_service_api_key

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HELMET_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/zodiacore.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Correlation ID for request tracing
CORRELATION_ID_HEADER=X-Correlation-ID

# Metrics Configuration
METRICS_UPDATE_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@zodiacore.com
EMAIL_SERVICE_URL=https://api.sendgrid.com/v3/mail/send

# SMS Service (Twilio, etc.)
SMS_SERVICE_SID=your_twilio_account_sid
SMS_SERVICE_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# Payment Processing (Stripe, PayPal, etc.)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics (Google Analytics, Mixpanel, etc.)
GA_TRACKING_ID=your_google_analytics_tracking_id
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================

# Feature Toggles
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_LOGGING=true
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true

# Astrology Calculation Settings
ASTRO_CALCULATION_TIMEOUT=30000
ASTRO_CACHE_DURATION=86400

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Development Database (local MongoDB)
DEV_MONGODB_URI=mongodb://localhost:27017/zodiacore_dev

# Debug Mode
DEBUG=zodiacore:*

# Hot Reload
HOT_RELOAD_ENABLED=true

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================

# Production Database (MongoDB Atlas)
PROD_MONGODB_URI=mongodb+srv://prod-user:prod-password@prod-cluster.mongodb.net/zodiacore_prod?retryWrites=true&w=majority

# Production Redis (Redis Cloud, ElastiCache, etc.)
PROD_REDIS_URL=redis://prod-redis-host:6379

# Production API URL
PROD_REACT_APP_API_URL=https://api.zodiacore.com

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_ENABLED=true

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=30

# =============================================================================
# INFRASTRUCTURE & DEPLOYMENT
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=zodiacore
K8S_REPLICAS=3

# Cloud Provider Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring & Alerting
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
ALERTMANAGER_URL=http://alertmanager:9093

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# Privacy Settings
ALLOW_DATA_COLLECTION=true
ALLOW_ANALYTICS=true

# Legal Requirements
TERMS_VERSION=1.0
PRIVACY_POLICY_VERSION=1.0

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Resource Limits
CPU_LIMIT=0.5
MEMORY_LIMIT=512M

# Connection Pooling
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Load Balancing
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# ERROR HANDLING & RESILIENCE
# =============================================================================

# Retry Configuration
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
RETRY_BACKOFF_MULTIPLIER=2

# Timeout Configuration
REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Fallback Configuration
FALLBACK_ENABLED=true
FALLBACK_CACHE_TTL=300

# =============================================================================
# TESTING & QUALITY ASSURANCE
# =============================================================================

# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/zodiacore_test

# Test Configuration
TEST_TIMEOUT=5000
TEST_PARALLEL=true
TEST_COVERAGE_THRESHOLD=80

# Mock Services
MOCK_EXTERNAL_APIS=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true